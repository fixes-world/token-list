---
import Loading from "@components/widgets/Loading.astro";
import LandingSlogan from "./sections/LandingSlogan.astro";
import SectionWrapper from "@components/partials/SectionWrapper.astro";
import QuickRegisterToken from "./sections/QuickRegisterToken.vue";
import HowToUse from "./sections/HowToUse.vue";
import FullList from "./sections/FullList.vue";
import FullNFTList from "./sections/FullNFTList.vue";
---

<SectionWrapper>
  <LandingSlogan />
</SectionWrapper>
<SectionWrapper title="Quick Register">
  <Loading id="QuickRegisterToken" classNames={["max-w-xl", "h-20"]} />
  <QuickRegisterToken client:only="vue" />
</SectionWrapper>
<SectionWrapper title="Full List - Fungible Tokens">
  <Loading id="FullListSection" classNames={["max-w-3xl", "h-24"]} />
  <FullList client:only="vue" />
</SectionWrapper>
<SectionWrapper title="Full List - Non-Fungible Tokens">
  <Loading id="FullNFTListSection" classNames={["max-w-3xl", "h-24"]} />
  <FullNFTList client:only="vue" />
</SectionWrapper>
<SectionWrapper title="How to use">
  <Loading id="HowToUseSection" classNames={["max-w-3xl", "h-24"]} />
  <HowToUse client:only="vue" />
</SectionWrapper>
